// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  // Force Prisma to use the oddsoracle schema
  schemas  = ["oddsoracle"]
}

// User model for authentication and subscription management
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Authentication
  accounts Account[]
  sessions Session[]

  // Subscription
  subscription Subscription?

  // Analytics & Usage
  analytics     Analytics[]
  usageTracking UsageTracking[]

  // Kalshi API connection (optional, for syncing portfolio)
  kalshiConnection KalshiConnection?

  @@map("users")
  @@schema("oddsoracle")
}

// NextAuth Account model
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
  @@schema("oddsoracle")
}

// NextAuth Session model
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
  @@schema("oddsoracle")
}

// NextAuth VerificationToken model
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
  @@schema("oddsoracle")
}

// Subscription model for managing user subscription tiers
model Subscription {
  id                     String             @id @default(cuid())
  userId                 String             @unique
  stripeCustomerId       String?            @unique
  stripeSubscriptionId   String?            @unique
  stripePriceId          String?
  stripeCurrentPeriodEnd DateTime?
  status                 SubscriptionStatus @default(FREE)
  createdAt              DateTime           @default(now())
  updatedAt              DateTime           @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
  @@schema("oddsoracle")
}

enum SubscriptionStatus {
  FREE
  PREMIUM
  PRO
  CANCELLED
  PAST_DUE

  @@map("subscription_status")
  @@schema("oddsoracle")
}

// Analytics model for tracking user engagement
model Analytics {
  id        String   @id @default(cuid())
  userId    String
  eventType String // e.g., "game_viewed", "bet_recommendation_viewed", "upgrade_clicked"
  eventData Json? // Additional event data
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([eventType])
  @@index([createdAt])
  @@map("analytics")
  @@schema("oddsoracle")
}

// UsageTracking model for tracking API usage and tier limits
model UsageTracking {
  id           String   @id @default(cuid())
  userId       String
  resourceType String // e.g., "game_analysis", "bet_recommendation", "advanced_analytics"
  count        Int      @default(1)
  date         DateTime @default(now())
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, resourceType, date])
  @@index([userId, date])
  @@map("usage_tracking")
  @@schema("oddsoracle")
}

// Prediction model for tracking predictions and outcomes (feedback loop)
model Prediction {
  id       String   @id @default(cuid())
  gameId   String // External game ID from odds API
  date     DateTime // Game date/time
  homeTeam String
  awayTeam String
  sport    String?  // e.g. "cbb", "nba", "nhl" for per-sport feedback

  // Core prediction (stored as JSON where needed)
  predictedScore   Json   // { home: number, away: number }
  predictedSpread  Float
  predictedTotal   Float? // home + away for totals feedback
  winProbability   Json   // { home: number, away: number }
  confidence       Float
  keyFactors       Json?  // string[] - what drove the prediction
  valueBets        Json?  // MatchupPrediction.valueBets - value bet recommendations
  favorableBets    Json?  // Serialized FavorableBet[] - bookmaker, edge, etc.
  oddsSnapshot     Json?  // { spread?, total?, moneyline?: { away?, home? } } at prediction time

  // Actual outcome (filled in after game)
  actualHomeScore Int?
  actualAwayScore Int?
  actualWinner    String? // "home" or "away"
  actualTotal     Int?    // actualHomeScore + actualAwayScore for totals feedback

  // Status tracking
  validated   Boolean   @default(false)
  validatedAt DateTime?

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([gameId])
  @@index([date])
  @@index([validated])
  @@index([validated, date])
  @@index([sport])
  @@map("predictions")
  @@schema("oddsoracle")
}

// Kalshi API credentials (encrypted at rest). One per user for portfolio sync.
model KalshiConnection {
  id                 String   @id @default(cuid())
  userId             String   @unique
  apiKeyId           String   // Not secret; displayed in Kalshi UI
  privateKeyEncrypted String  @db.Text // PEM encrypted with KALSHI_CREDENTIALS_ENCRYPTION_KEY
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("kalshi_connections")
  @@schema("oddsoracle")
}
