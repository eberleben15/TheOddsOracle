// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  // Force Prisma to use the oddsoracle schema
  schemas  = ["oddsoracle"]
}

// User model for authentication and subscription management
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Authentication
  accounts Account[]
  sessions Session[]

  // Subscription
  subscription Subscription?

  // Analytics & Usage
  analytics     Analytics[]
  usageTracking UsageTracking[]

  // Kalshi API connection (optional, for syncing portfolio)
  kalshiConnection KalshiConnection?

  // Polymarket wallet (optional; positions fetched via Data API by address)
  polymarketConnection PolymarketConnection?

  // Bankroll settings for adaptive sizing and risk (optional)
  bankrollSettings UserBankrollSettings?

  // Phase 4: Condition-based action engine
  rules          ABERule[]
  notifications ABENotification[]

  // Phase 5: Betting profile (market/sport preferences)
  bettingProfile UserBettingProfile?

  // Phase 0: Last synced portfolio snapshot (positions + optional contracts for risk engine)
  portfolioSnapshot PortfolioSnapshot?

  // Sandbox: user-built portfolio from matchups and prediction markets
  sandboxPortfolio SandboxPortfolio?

  @@map("users")
  @@schema("oddsoracle")
}

// Per-user bankroll and risk preferences (multi-tenant: one row per user).
model UserBankrollSettings {
  id             String   @id @default(cuid())
  userId         String   @unique
  bankrollUsd    Float    @default(0) // Risk capital in USD
  kellyFraction  Float    @default(0.25) // Fraction of full Kelly (e.g. 0.25 = quarter Kelly)
  riskProfile    String?  // conservative | moderate | aggressive
  // Decision engine (Build my slate) defaults
  maxPositions             Int?    // Max positions per slate (e.g. 12)
  maxFractionPerPosition   Float?  // Max fraction of bankroll per position (e.g. 0.02 = 2%)
  maxFactorFraction        Float?  // Max fraction of portfolio in one factor (e.g. 0.4 = 40%)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_bankroll_settings")
  @@schema("oddsoracle")
}

// Phase 5: User betting profile (market/sport preferences for DNA).
model UserBettingProfile {
  id                String   @id @default(cuid())
  userId            String   @unique
  preferredMarkets  Json?    // string[] e.g. ["kalshi", "polymarket"]
  preferredSports   Json?    // string[] e.g. ["cbb", "nba"]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_betting_profiles")
  @@schema("oddsoracle")
}

// NextAuth Account model
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
  @@schema("oddsoracle")
}

// NextAuth Session model
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
  @@schema("oddsoracle")
}

// NextAuth VerificationToken model
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
  @@schema("oddsoracle")
}

// Subscription model for managing user subscription tiers
model Subscription {
  id                     String             @id @default(cuid())
  userId                 String             @unique
  stripeCustomerId       String?            @unique
  stripeSubscriptionId   String?            @unique
  stripePriceId          String?
  stripeCurrentPeriodEnd DateTime?
  status                 SubscriptionStatus @default(FREE)
  createdAt              DateTime           @default(now())
  updatedAt              DateTime           @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
  @@schema("oddsoracle")
}

enum SubscriptionStatus {
  FREE
  PREMIUM
  PRO
  CANCELLED
  PAST_DUE

  @@map("subscription_status")
  @@schema("oddsoracle")
}

// Analytics model for tracking user engagement
model Analytics {
  id        String   @id @default(cuid())
  userId    String
  eventType String // e.g., "game_viewed", "bet_recommendation_viewed", "upgrade_clicked"
  eventData Json? // Additional event data
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([eventType])
  @@index([createdAt])
  @@map("analytics")
  @@schema("oddsoracle")
}

// UsageTracking model for tracking API usage and tier limits
model UsageTracking {
  id           String   @id @default(cuid())
  userId       String
  resourceType String // e.g., "game_analysis", "bet_recommendation", "advanced_analytics"
  count        Int      @default(1)
  date         DateTime @default(now())
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, resourceType, date])
  @@index([userId, date])
  @@map("usage_tracking")
  @@schema("oddsoracle")
}

// Prediction model for tracking predictions and outcomes (feedback loop)
model Prediction {
  id       String   @id @default(cuid())
  gameId   String // External game ID from odds API
  date     DateTime // Game date/time
  homeTeam String
  awayTeam String
  sport    String?  // e.g. "cbb", "nba", "nhl" for per-sport feedback

  // Core prediction (stored as JSON where needed)
  predictedScore    Json   // { home: number, away: number }
  predictedSpread   Float
  alternateSpread   Json?  // { spread, direction, team, reason, confidence, riskLevel }
  predictedTotal    Float? // home + away for totals feedback
  winProbability    Json   // { home: number, away: number }
  confidence        Float
  keyFactors        Json?  // string[] - what drove the prediction
  valueBets         Json?  // MatchupPrediction.valueBets - value bet recommendations
  favorableBets     Json?  // Serialized FavorableBet[] - bookmaker, edge, etc.
  oddsSnapshot      Json?  // { spread?, total?, moneyline?: { away?, home? } } at prediction time
  predictionTrace   Json?  // Audit trail: modelPath, totalScore, homeWinProbRaw, etc. for training
  teamAnalytics     Json?  // { away: TeamAnalytics, home: TeamAnalytics } - full analytics snapshot at prediction time

  // Actual outcome (filled in after game)
  actualHomeScore Int?
  actualAwayScore Int?
  actualWinner    String? // "home" or "away"
  actualTotal     Int?    // actualHomeScore + actualAwayScore for totals feedback

  // Line movement & CLV (Closing Line Value) - filled after validation
  openingSpread   Float?  // Market spread when game first appeared
  closingSpread   Float?  // Market spread at game time (or last capture before)
  openingTotal    Float?  // Opening over/under
  closingTotal    Float?  // Closing over/under
  clvSpread       Float?  // CLV for spread: closingSpread - predictedSpread (positive = beat the close)
  clvTotal        Float?  // CLV for total: closingTotal - predictedTotal (positive = beat the close)
  lineMovement    Float?  // closingSpread - openingSpread (how much line moved)

  // Feedback loop tracking (Phase 1)
  configVersion      Int?    // Track which config was active when prediction was made
  recommendationTier String? // "high" | "medium" | "low" - recommendation tier
  closingLineValue   Float?  // CLV = (closing spread - predicted spread) for beat-the-close tracking

  // Status tracking
  validated   Boolean   @default(false)
  validatedAt DateTime?

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([gameId])
  @@index([date])
  @@index([validated])
  @@index([validated, date])
  @@index([sport])
  @@map("predictions")
  @@schema("oddsoracle")
}

// Tracked games for the prediction pipeline - ensures every game gets a prediction
model TrackedGame {
  id              String    @id @default(cuid())
  externalId      String    @unique // Game ID from Odds API
  sport           String    // e.g. "basketball_ncaab", "basketball_nba", "icehockey_nhl", "baseball_mlb"
  homeTeam        String
  awayTeam        String
  commenceTime    DateTime  // When the game starts
  
  // Pipeline status
  discoveredAt    DateTime  @default(now()) // When we first saw this game
  predictionId    String?   // Link to the Prediction record once generated
  predictedAt     DateTime? // When prediction was generated
  status          String    @default("pending") // "pending", "predicted", "completed", "cancelled"
  
  // Odds data snapshot (for historical reference)
  oddsSnapshot    Json?     // { spread?, total?, moneyline? } at discovery time
  
  // Metadata
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([sport])
  @@index([status])
  @@index([commenceTime])
  @@index([sport, status])
  @@map("tracked_games")
  @@schema("oddsoracle")
}

// Cron job execution history (for admin monitoring)
model JobExecution {
  id          String    @id @default(cuid())
  jobName     String    // "generate-predictions", "record-outcomes", "refresh-team-stats"
  status      String    // "success", "failed"
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  error       String?   @db.Text
  metadata    Json?     // { totalGames?, successCount?, errorCount?, etc. }

  @@index([jobName, startedAt])
  @@map("job_executions")
  @@schema("oddsoracle")
}

// Model config for trained params (recalibration, etc.) - feedback loop persistence
model ModelConfig {
  id        String   @id @default(cuid())
  key       String   @unique // e.g. "recalibration_platt"
  value     Json     // e.g. { A: 1.2, B: -0.1 }
  updatedAt DateTime @updatedAt

  @@map("model_config")
  @@schema("oddsoracle")
}

// Feedback history - tracks ATS feedback reports over time (Phase 1)
model FeedbackHistory {
  id            String   @id @default(cuid())
  timestamp     DateTime @default(now())
  configVersion Int
  sport         String?
  
  // Snapshot of feedback report
  overall       Json     // { sampleCount, wins, losses, winRate, netUnits }
  bySport       Json     // segmentations.bySport
  topFeatures   Json     // top 10 feature importance
  
  // Performance metrics
  brierScore    Float?
  logLoss       Float?
  spreadMAE     Float?
  
  @@index([timestamp])
  @@index([configVersion])
  @@index([sport])
  @@map("feedback_history")
  @@schema("oddsoracle")
}

// A/B test assignment - tracks which users are in which test variant (Phase 2)
model ABTestAssignment {
  id          String   @id @default(cuid())
  userId      String
  testName    String   // "config_v6_vs_v5"
  variant     String   // "control" | "treatment"
  assignedAt  DateTime @default(now())
  
  @@unique([userId, testName])
  @@index([testName])
  @@map("ab_test_assignments")
  @@schema("oddsoracle")
}

// A/B test results - tracks outcomes per test variant (Phase 2)
model ABTestResult {
  id            String   @id @default(cuid())
  testName      String
  userId        String
  variant       String
  
  // Outcome metrics
  predictionId  String?  // Link to specific prediction
  atsResult     Int?     // 1 = win, -1 = loss, 0 = push
  netUnits      Float?
  recordedAt    DateTime @default(now())
  
  @@index([testName, variant])
  @@index([predictionId])
  @@map("ab_test_results")
  @@schema("oddsoracle")
}

// Decision engine run tracking - tracks portfolio construction decisions (Phase 4)
model DecisionEngineRun {
  id              String   @id @default(cuid())
  userId          String
  timestamp       DateTime @default(now())
  
  // Inputs
  bankroll        Float
  sport           String
  configVersion   Int
  candidateCount  Int
  
  // Outputs
  selectedCount   Int
  selectedSlate   Json     // PortfolioPosition[]
  alternatives    Json?    // Top rejected candidates with reasons
  
  // Constraints used
  constraints     Json     // DecisionEngineConstraints
  
  // Outcomes (populated after games complete)
  validated       Boolean  @default(false)
  actualATS       Float?   // Portfolio-level ATS win rate
  actualNetUnits  Float?
  maxDrawdown     Float?
  avgCorrelation  Float?   // Realized correlation vs predicted
  
  @@index([userId])
  @@index([timestamp])
  @@index([validated])
  @@index([configVersion])
  @@map("decision_engine_runs")
  @@schema("oddsoracle")
}

// Decision engine outcome - individual position outcomes within a run (Phase 4)
model DecisionEngineOutcome {
  id              String   @id @default(cuid())
  runId           String
  positionIndex   Int      // Which position in slate (0-based)
  
  // Position details
  candidateId     String
  stakeUsd        Float
  expectedValue   Float
  
  // Outcome
  predictionId    String?
  atsResult       Int?     // 1 = win, -1 = loss, 0 = push
  netUnits        Float?
  
  @@index([runId])
  @@index([predictionId])
  @@map("decision_engine_outcomes")
  @@schema("oddsoracle")
}

// Prediction history - tracks all changes to predictions for auditing
model PredictionHistory {
  id              String   @id @default(cuid())
  predictionId    String   // Reference to the prediction
  gameId          String   // Game ID for easy lookup
  changeType      String   // "created", "regenerated", "validated", "updated"
  previousValues  Json?    // Snapshot of previous values before change
  newValues       Json     // Snapshot of new/current values
  reason          String?  // Why the change was made (e.g., "model update", "manual regeneration")
  triggeredBy     String?  // "cron", "admin", "system"
  createdAt       DateTime @default(now())

  @@index([predictionId])
  @@index([gameId])
  @@index([changeType])
  @@index([createdAt])
  @@map("prediction_history")
  @@schema("oddsoracle")
}

// Historical odds tracking - captures line movements over time for CLV analysis
model OddsHistory {
  id          String   @id @default(cuid())
  gameId      String   // External game ID from Odds API
  sport       String   // e.g. "basketball_ncaab", "basketball_nba"
  capturedAt  DateTime @default(now()) // When this snapshot was taken
  
  // Consensus/average lines across bookmakers
  spread      Float?   // Home team spread (negative = home favored)
  total       Float?   // Over/under total points
  homeML      Int?     // Home moneyline (American odds)
  awayML      Int?     // Away moneyline (American odds)
  
  // For tracking opening vs closing
  isOpening   Boolean  @default(false) // True for first capture of this game
  isClosing   Boolean  @default(false) // True for last capture before game starts
  
  // Raw bookmaker data (optional, for detailed analysis)
  bookmakerData Json?  // Array of { bookmaker, spread, total, homeML, awayML }
  
  createdAt   DateTime @default(now())

  @@index([gameId])
  @@index([gameId, capturedAt])
  @@index([sport, capturedAt])
  @@index([isOpening])
  @@index([isClosing])
  @@map("odds_history")
  @@schema("oddsoracle")
}

// Admin bet tracking - records bets placed based on predictions
model BetRecord {
  id            String   @id @default(cuid())
  predictionId  String   // Reference to the prediction this bet is based on
  gameId        String   // External game ID
  date          DateTime // Game date
  sport         String?  // Sport key

  // Teams
  homeTeam      String
  awayTeam      String

  // Bet details
  betType       String   // "spread", "moneyline", "total_over", "total_under"
  betSide       String   // "home", "away" for spread/ML; "over", "under" for totals
  line          Float?   // The line taken (spread value or total)
  odds          Int      // American odds at time of bet
  stake         Float    // Amount wagered
  potentialPayout Float  // Potential winnings if bet hits

  // Our prediction confidence
  confidence    Float    // Confidence at time of bet
  edge          Float?   // Calculated edge vs market

  // Result (filled after game)
  result        String?  // "win", "loss", "push", "pending"
  actualPayout  Float?   // Actual profit/loss after result
  settledAt     DateTime?

  // Metadata
  notes         String?  // Admin notes
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([predictionId])
  @@index([gameId])
  @@index([date])
  @@index([result])
  @@index([sport])
  @@map("bet_records")
  @@schema("oddsoracle")
}

// Kalshi API credentials (encrypted at rest). One per user for portfolio sync.
model KalshiConnection {
  id                 String   @id @default(cuid())
  userId             String   @unique
  apiKeyId           String   // Not secret; displayed in Kalshi UI
  privateKeyEncrypted String  @db.Text // PEM encrypted with KALSHI_CREDENTIALS_ENCRYPTION_KEY
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("kalshi_connections")
  @@schema("oddsoracle")
}

// Phase 0: Basic portfolio data model — last synced positions (and optional contracts) per user.
model PortfolioSnapshot {
  id         String   @id @default(cuid())
  userId     String   @unique
  positions  Json     // ABEPosition[] — contractId, side, size, costPerShare
  contracts  Json?    // ABEContract[] optional, for factor/exposure without refetch
  fetchedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("portfolio_snapshots")
  @@schema("oddsoracle")
}

// Sandbox: user-built portfolio (positions + optional contracts) from matchups and PM events.
model SandboxPortfolio {
  id         String   @id @default(cuid())
  userId     String   @unique
  positions  Json     // ABEPosition[]
  contracts  Json?    // ABEContract[] optional
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sandbox_portfolios")
  @@schema("oddsoracle")
}

// Polymarket: user's wallet address for pulling positions via Data API (no API key).
model PolymarketConnection {
  id            String   @id @default(cuid())
  userId        String   @unique
  walletAddress String  // 0x + 40 hex (Ethereum address used on Polymarket)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("polymarket_connections")
  @@schema("oddsoracle")
}

// Phase 4: User-defined rules (triggers + conditions + actions).
model ABERule {
  id            String   @id @default(cuid())
  userId        String
  name          String
  triggerType   String   // price_above | price_below | portfolio_exposure_above | concentration_above | manual
  triggerConfig Json     // { contractId?, factorId?, value? } per trigger type
  actions       Json     // [{ type: "notify"|"log", message? }]
  enabled       Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  notifications ABENotification[]

  @@index([userId])
  @@index([userId, enabled])
  @@map("abe_rules")
  @@schema("oddsoracle")
}

// Phase 4: In-app notifications (when a rule fires or system).
model ABENotification {
  id        String   @id @default(cuid())
  userId    String
  ruleId    String?
  title     String
  body      String   @db.Text
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  rule ABERule? @relation(fields: [ruleId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([userId, read])
  @@index([createdAt])
  @@map("abe_notifications")
  @@schema("oddsoracle")
}

// Player props: NBA player data cache
model Player {
  id          String   @id // ESPN athlete ID
  name        String
  firstName   String?
  lastName    String?
  team        String
  teamId      String
  position    String
  jersey      Int?
  headshotUrl String?
  status      String   @default("active") // active, day-to-day, out, injured
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  propPredictions PlayerPropPrediction[]
  
  @@index([team])
  @@index([teamId])
  @@map("players")
  @@schema("oddsoracle")
}

// Player props: predictions for individual player performance props
model PlayerPropPrediction {
  id              String   @id @default(cuid())
  gameId          String   // External game ID from Odds API
  playerId        String   // ESPN player ID
  playerName      String   // Denormalized for display
  propType        String   // points, rebounds, assists, threes, etc.
  sport           String   @default("basketball_nba")
  
  // Market data
  line            Float    // The sportsbook line (e.g., 24.5 points)
  overOdds        Int?     // American odds for over
  underOdds       Int?     // American odds for under
  bestBookmaker   String?  // Which book has best odds
  
  // Our prediction
  predictedValue  Float    // Our model's predicted stat
  confidence      Float    // Confidence score (0-100)
  edge            Float    // (predicted - line) / line as percentage
  recommendation  String   // "over", "under", "pass"
  factors         Json?    // string[] - factors driving prediction
  
  // Supporting stats
  seasonAvg       Float?   // Season average for this stat
  last5Avg        Float?   // Last 5 games average
  last10Avg       Float?   // Last 10 games average
  
  // Outcome tracking (filled after game)
  actualValue     Float?   // Actual stat from box score
  hit             Boolean? // Did our recommendation hit?
  settledAt       DateTime?
  
  // Metadata
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  player          Player?  @relation(fields: [playerId], references: [id], onDelete: SetNull)
  
  @@index([gameId])
  @@index([playerId])
  @@index([propType])
  @@index([sport])
  @@index([recommendation])
  @@index([createdAt])
  @@index([hit])
  @@map("player_prop_predictions")
  @@schema("oddsoracle")
}
